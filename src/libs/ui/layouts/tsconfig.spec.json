{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.d.ts",
    "../../**/src/**/*.ts",
    "../../**/src/**/*.tsx"
  ]
}
